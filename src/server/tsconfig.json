{
  "compilerOptions": {
    "target": "ES2019",
    "module": "CommonJS",
    "rootDir": "../",
    "outDir": "../../dist/server",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "strict": true,
    "skipLibCheck": true,
    "types": [
      "node",
      "mssql"
    ],
    "paths": {

      "../../express": ["./express.d.ts"],
      "../../body-parser": ["./body-parser.d.ts"]

    }
  },
  "include": [

    "**/*.ts",
    "express.d.ts",
    "body-parser.d.ts",

    "../shared/**/*.ts",
    "./**/*.ts"

  ]
}
